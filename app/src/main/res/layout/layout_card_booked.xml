<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/image_field"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/futsal_field"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/provider_field"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Playtime"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Play"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time Play"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minimum DP"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/provider_field_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/field_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/playtime_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/date_play_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/time_play_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/minimum_dp_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/status_dp_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_dp_not_yet_paid"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/bank_acc_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_account_number"
                android:textSize="11sp"
                android:textAlignment="textEnd"
                android:textColor="@color/primary_light"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/preview_location_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_location"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/contact_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_provider"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                android:layout_marginStart="6dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/rating_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gift A Review"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:backgroundTint="@color/primary"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>