<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/card_provider_field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/image_provider_field"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/futsal_3"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/field_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Futsal Aku Tahu Center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semi_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rating_bar_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="1"
                android:rating="5"
                tools:ignore="SpeakableTextPresentCheck"
                android:progressTint="#FFC107"
                android:secondaryProgressTint="#A17A04"/>

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_5_0"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:layout_marginStart="6dp"
                android:textSize="12.5sp"
                android:textColor="#FFC107"/>

        </LinearLayout>

        <TextView
            android:id="@+id/location_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jalan_gatot_subroto_nomor_68_777_2"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_location_on"
            app:drawableTint="#B3B3B3"/>

        <TextView
            android:id="@+id/price_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rp_550_000_jam"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

</LinearLayout>