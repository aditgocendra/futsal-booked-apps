<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/image_field"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/user_booked"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Play Date"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Playtime"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status Booked"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/username_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/field_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/playdate_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/playtime_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/confirmation_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirmation_paid"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/cancel_booked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel_booked"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/contact_user_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_user"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:backgroundTint="@color/primary_dark"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>